# LiteLLM Smart Routing Configuration
# Google Cloud MicroVM Integration

# Enable LiteLLM smart routing
LITELLM_ENABLED=true

# Google Cloud LiteLLM MicroVM endpoint
LITELLM_BASE_URL=https://your-litellm-microvm.run.app

# GCP service account key or API token
LITELLM_API_KEY=your-gcp-service-account-key

# Request timeout in milliseconds (default: 30000)
LITELLM_TIMEOUT=30000

# Number of retry attempts (default: 3) 
LITELLM_RETRIES=3

# Fallback strategy: immediate, exponential_backoff, circuit_breaker
LITELLM_FALLBACK_STRATEGY=circuit_breaker

# Health check interval in milliseconds (default: 60000)
LITELLM_HEALTH_CHECK_INTERVAL=60000

# Model routing override (optional)
# LITELLM_RESEARCH_MODEL=gpt-3.5-turbo
# LITELLM_WRITING_MODEL=gpt-4
# LITELLM_PREMIUM_MODEL=claude-3-5-sonnet

# Vector search configuration (existing)
CHROMA_URL=https://your-chroma-instance.com
CHROMA_API_KEY=your-chroma-api-key
CHROMA_TENANT=your-tenant
CHROMA_DATABASE=your-database

# Cohere reranking configuration (existing)
COHERE_API_KEY=your-cohere-api-key

# Other existing configurations...
OPENAI_API_KEY=your-openai-api-key
GROQ_API_KEY=your-groq-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Vercel Deployment Configuration
VERCEL_URL=your-vercel-deployment-url.vercel.app
VERCEL_ENV=production
VERCEL_REGION=iad1
VERCEL_GIT_COMMIT_SHA=auto

# Security Configuration
ACCESS_PASSWORD=your-site-password
CSRF_SECRET=your-csrf-secret-key
SESSION_SECRET=your-session-secret

# Analytics and Monitoring
VERCEL_ANALYTICS_ID=your-analytics-id
VERCEL_SPEED_INSIGHTS_ID=your-speed-insights-id
SENTRY_DSN=your-sentry-dsn
LOGROCKET_ID=your-logrocket-id

# Performance Configuration
CACHE_TTL=3600
CDN_URL=https://cdn.your-domain.com
IMAGE_OPTIMIZATION=true
COMPRESSION_ENABLED=true
GZIP_ENABLED=true

# Feature Flags
ENABLE_PWA=true
ENABLE_OFFLINE=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_DARK_MODE=true
ENABLE_I18N=true

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_SKIP_SUCCESSFUL=true

# Database Configuration (if used)
DATABASE_URL=postgresql://user:pass@localhost/dbname
REDIS_URL=redis://localhost:6379
MEMCACHED_URL=localhost:11211

# Third-party Services
CLOUDFLARE_API_TOKEN=your-cloudflare-token
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@your-domain.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Build Configuration
BUILD_CACHE=true
BUILD_OPTIMIZATION=true
SOURCE_MAPS=false
MINIFY=true
TREE_SHAKING=true